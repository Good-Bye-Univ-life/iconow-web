{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/privacy_policy_ja",
        "destination": "/views/privacy_policy/privacy_policy_ja.html"
      },
      {
        "source": "/privacy_policy_en",
        "destination": "/views/privacy_policy/privacy_policy_en.html"
      },
      {
        "source": "/terms_ja",
        "destination": "/views/terms/terms_ja.html"
      },
      {
        "source": "/terms_en",
        "destination": "/views/terms/terms_en.html"
      },
      {
        "source": "/",
        "destination": "/views/index/index_en.html"
      },
      {
        "source": "**",
        "destination": "/views/404/404.html"
      }
    ],
    "redirects": [
      {
        "source": "/en",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/ja",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/privacy_policy",
        "destination": "/privacy_policy_en",
        "type": 301
      },
      {
        "source": "/terms",
        "destination": "/terms_en",
        "type": 301
      }
    ]
  }
}
